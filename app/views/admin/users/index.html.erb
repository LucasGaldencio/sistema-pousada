<h1>Gerenciamento de Usuários</h1>

<%= link_to 'Novo Usuário', new_admin_user_path %>

<table>
  <thead>
  <tr>
    <th>Email</th>
    <th>Função</th>
    <th>Ações</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to 'Editar', edit_admin_user_path(user) %> |
        <%= link_to 'Excluir', admin_user_path(user), method: :delete, data: { confirm: 'Tem certeza?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
